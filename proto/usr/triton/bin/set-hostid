import zlib
from subprocess import check_output
from struct import pack

uuid = check_output(['/usr/sbin/dmidecode', '-s', 'system-uuid']).strip(b'\n')
etchostid = open('/etc/hostid', 'wb')
etchostid.write(pack('I', zlib.crc32(uuid)))
etchostid.close()
